<h1>Imask</h1>

<BsForm @formLayout='vertical' as |form|>
  <div class='row'>
    <div class='col-8 col-sm-9 col-md-8 col-xl-9'>
      <form.group>
        <label for='contribution'>Contribution</label>
        <Input
          id='contribution'
          @value={{this.contribution}}
          @type='range'
          min='0'
          max='10000'
          step='10'
          class='custom-range'
          {{on 'change' this.onChange}}
        />
      </form.group>
    </div>
    <div class='col-4 col-sm-3 col-md-4 col-xl-3'>
      <form.element @onChange={{this.doNothing}} as |el|>
        <el.control
          {{imask-currency
            this.contribution
            'â‚¬'
            onChange=this.setContribution
            min=0
            max='10000'
          }}
        />
      </form.element>
    </div>
  </div>
</BsForm>